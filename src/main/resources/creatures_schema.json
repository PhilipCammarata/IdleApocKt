{
  "$id": "creature_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Creature Schema",

  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {"type": "string", "minLength": 1},
      "race": {"type": "string", "minLength": 1},
      "floor": {"type": "string", "minLength": 1},
      "dropType": {"type": "string", "minLength": 1},
      "juiceType": {"type": "string", "minLength": 1},
      "spawnOrder": {"type": "number"},
      "spawnTimer": {"type": "number"},
      "health": {"type": "number"},
      "levels": {
        "type": "array",
        "items": {
          "properties": {
            "level": {"type": "number"},
            "juice": {"type": "number"},
            "drop": {"type": "number"},
            "damage": {"type": "number"},
            "darkEnergy": {"type": "number"}
          }
        }
      },
      "skins": {
        "type": "array",
        "items": {
          "properties": {
            "name": {"type": "string"},
            "quality": {"type": "string", "enum": ["Default", "Rare", "Legendary"]}
          }
        }
      }
    }
  }
}
